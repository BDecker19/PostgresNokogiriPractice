<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Track file</th>
    <th>Artist</th>
    <th></th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= track.title %></td>
    <td><%= track.track_file %></td>
    <td><%= track.artist %></td>
    <audio controls="" name="media">
      <source src="<%=track.track_file.url %>" type="audio/mpeg">
    </audio>
    <td><%= link_to 'Show', track %></td>
    <td><%= link_to 'Edit', edit_track_path(track) %></td>
    <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

